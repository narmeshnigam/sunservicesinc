RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Force non-www (remove www) â€“ adjust if you prefer www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [L,R=301]

# Deny direct access to .sql and other sensitive files
<FilesMatch "\.(sql|md|csv|yml|yaml|env)$">
  Require all denied
</FilesMatch>

# Disable directory browsing
Options -Indexes

# Ensure Admin directory is restricted by auth in PHP (no rewrite needed)